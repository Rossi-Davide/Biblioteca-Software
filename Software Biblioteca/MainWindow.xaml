        <TextBox x:Name="annoT" HorizontalAlignment="Left" Height="23" Margin="552,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172"/>
        <TextBox x:Name="nPagineT" HorizontalAlignment="Left" Height="23" Margin="552,231,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172"/>
        <TextBox x:Name="editoreT" HorizontalAlignment="Left" Height="23" Margin="552,259,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="172"/>
        <Button x:Name="creaB" Content="Crea Libro" HorizontalAlignment="Left" Margin="552,304,0,0" VerticalAlignment="Top" Width="97" Height="45"/>
        <Label Content="Titolo:" HorizontalAlignment="Left" Margin="427,113,0,0" VerticalAlignment="Top" Width="135"/>
        <Label Content="Autore:" HorizontalAlignment="Left" Margin="427,148,0,0" VerticalAlignment="Top" Width="135"/>
        <Label Content="Anno pubblicazione:" HorizontalAlignment="Left" Margin="427,191,0,0" VerticalAlignment="Top" Width="135"/>
        <Label Content="Numero pagine:" HorizontalAlignment="Left" Margin="427,228,0,0" VerticalAlignment="Top" Width="135"/>
        <Label Content="Editore:" HorizontalAlignment="Left" Margin="427,256,0,0" VerticalAlignment="Top" Width="135"/>

