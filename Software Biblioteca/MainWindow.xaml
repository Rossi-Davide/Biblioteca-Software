        <TextBox x:Name="cercaT" HorizontalAlignment="Left" Height="37" Margin="10,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="197"/>
        <Button x:Name="cercaB" Content="Cerca" HorizontalAlignment="Left" Margin="212,131,0,0" VerticalAlignment="Top" Width="96" Height="37" Click="cercaB_Click"/>
        <RadioButton x:Name="autoreRB" Content="Autore" HorizontalAlignment="Left" Margin="177,182,0,0" VerticalAlignment="Top"/>
